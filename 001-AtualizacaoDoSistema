#   Atualização do Sistema

    sudo apt update
    
    sudo apt install -y net-tools
    
    sudo apt install -y openssh-server

    sudo apt list --upgradable

    sudo apt upgrade

    sudo apt dist-upgrade

    sudo apt full-upgrade
    
    sudo apt autoremove

    sudo apt autoclean

    sudo apt clean

    sudo cat /etc/os-release
    
    sudo cat /etc/lsb-release
